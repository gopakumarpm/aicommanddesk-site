---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch with AICommandDesk. Questions, collaborations, or feedback — we'd love to hear from you."
>
  <!-- Header -->
  <section class="bg-gradient-to-br from-navy-500 to-electric-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold">Contact Us</h1>
      <p class="mt-4 text-lg text-gray-300 max-w-2xl mx-auto">
        Have a question, suggestion, or collaboration idea? We would love to hear from you.
      </p>
    </div>
  </section>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Contact Form -->
      <div class="md:col-span-2">
        <h2 class="text-2xl font-bold text-navy-500 dark:text-white mb-6">Send Us a Message</h2>
        <form class="space-y-6" data-netlify="true" name="contact" method="POST">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Your Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="newsletter-input"
                placeholder="John Doe"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="newsletter-input"
                placeholder="john@company.com"
              />
            </div>
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Subject
            </label>
            <select
              id="subject"
              name="subject"
              class="newsletter-input"
            >
              <option value="general">General Question</option>
              <option value="collaboration">Collaboration / Partnership</option>
              <option value="feedback">Feedback</option>
              <option value="advertising">Advertising / Sponsorship</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="newsletter-input resize-none"
              placeholder="How can we help you?"
            ></textarea>
          </div>
          <button type="submit" class="btn-primary">Send Message</button>
        </form>
      </div>

      <!-- Sidebar -->
      <div>
        <h2 class="text-2xl font-bold text-navy-500 dark:text-white mb-6">Connect</h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-semibold text-navy-500 dark:text-white text-sm">Email</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">hello@aicommanddesk.com</p>
          </div>
          <div>
            <h3 class="font-semibold text-navy-500 dark:text-white text-sm">Follow Us</h3>
            <div class="flex items-center gap-3 mt-2">
              <a href="#" class="p-2 rounded-lg bg-gray-100 dark:bg-navy-400 text-gray-600 dark:text-gray-300 hover:text-electric-500 hover:bg-electric-50 dark:hover:bg-navy-300 transition-colors" aria-label="Twitter">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </a>
              <a href="#" class="p-2 rounded-lg bg-gray-100 dark:bg-navy-400 text-gray-600 dark:text-gray-300 hover:text-electric-500 hover:bg-electric-50 dark:hover:bg-navy-300 transition-colors" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </a>
            </div>
          </div>
          <div class="p-5 bg-gray-50 dark:bg-navy-600 rounded-xl border border-gray-200 dark:border-navy-400">
            <h3 class="font-semibold text-navy-500 dark:text-white text-sm mb-2">Response Time</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">We typically respond within 24–48 hours during business days.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
