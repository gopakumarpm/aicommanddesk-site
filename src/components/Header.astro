---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/start-here', label: 'Start Here' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-50 bg-white/90 dark:bg-navy-500/90 backdrop-blur-md border-b border-gray-200 dark:border-navy-400 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <span class="text-xl font-bold text-navy-500 dark:text-white group-hover:text-electric-500 transition-colors">
          AI<span class="text-electric-500">Command</span>Desk
        </span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 ${
              currentPath === link.href
                ? 'bg-electric-50 text-electric-600 dark:bg-navy-400 dark:text-electric-400'
                : 'text-gray-600 hover:text-electric-500 hover:bg-gray-50 dark:text-gray-300 dark:hover:text-electric-400 dark:hover:bg-navy-400'
            }`}
          >
            {link.label}
          </a>
        ))}
        <!-- Dark Mode Toggle -->
        <button
          id="theme-toggle-desktop"
          class="ml-2 p-2 rounded-lg text-gray-500 hover:text-electric-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-electric-400 dark:hover:bg-navy-400 transition-colors"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"/>
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="flex items-center md:hidden space-x-2">
        <button
          id="theme-toggle-mobile"
          class="p-2 rounded-lg text-gray-500 hover:text-electric-500 dark:text-gray-400 dark:hover:text-electric-400 transition-colors"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"/>
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
        <button
          id="mobile-menu-btn"
          class="p-2 rounded-lg text-gray-500 hover:text-electric-500 dark:text-gray-400 dark:hover:text-electric-400 transition-colors"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-navy-500 border-t border-gray-200 dark:border-navy-400">
    <nav class="px-4 py-4 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`block px-4 py-3 rounded-lg text-sm font-medium transition-colors ${
            currentPath === link.href
              ? 'bg-electric-50 text-electric-600 dark:bg-navy-400 dark:text-electric-400'
              : 'text-gray-600 hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-navy-400'
          }`}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Dark mode toggle
  function toggleTheme() {
    document.documentElement.classList.toggle('dark');
    const isDark = document.documentElement.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  }

  document.getElementById('theme-toggle-desktop')?.addEventListener('click', toggleTheme);
  document.getElementById('theme-toggle-mobile')?.addEventListener('click', toggleTheme);

  // Load saved theme
  const saved = localStorage.getItem('theme');
  if (saved === 'dark' || (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark');
  }
</script>
